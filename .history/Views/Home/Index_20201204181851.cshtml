@model Passcode
@{
    ViewBag.Title = "ClickCounter";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>Hello!</title>
</head>

<body>
    <h3>Random passcode</h3>
    <form action="/password" method="post">
        @Html.HiddenFor(m => m.ClickCount)
        <fieldset>
            <legend>Button clicks counter</legend>
            <div>
                @Html.LabelFor(m => m.ClickCount)
                <h2>@ModelExpressionProvider.ClickCount</h2>
            </div>
            <div>
                <button type="submit"></button>
            </div>
        </fieldset>

    </form>
</body>

</html>



<!-- show the code that is generated when button is clicked. Also show times clicked.    -->